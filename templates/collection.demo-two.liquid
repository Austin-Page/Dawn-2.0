{% layout none %}

<div id="app">
  <div class="container">
  <template v-if="collection">
    <h1 v-html="collection.title"></h1>
    <div class="card-container">
    	<div class="card" v-for="product in collection.products">
    		<h2 class="card-header" v-html="product.title"></h2>
      		<div class="card-body" v-if="product.price_min == product.price_max" v-html="product.price_min"></div>
        	<div class="card-body" v-else v-html="product.price_min + ' _ ' + product.price_max"></div>
		</div>
    </div>
  </template>
</div>

<script src="https://unpkg.com/vue@next"></script>

<script>
  const options = {
    name: "Collection App",
    data() {
    	return {
    collection: null
  		}
  	},
      methods: {
        grabCollection() {
          fetch('https://dev-help55642.myshopify.com/collections/{{collection.handle}}?view=json')
          	.then(response => response.json())
          	.then(data => this.collection = data);
		}
      },
        mounted() {
            this.grabCollection();
         }
  }  
        const CollectionApp = Vue.createApp(options).mount('#app');
</script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
